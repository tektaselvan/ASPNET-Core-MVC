
@model Product
<div class="row">
  <div class="col-md-12">
      <div class="text-center">
        <h6 class="display-6">
           @Model.ProductName
        </h6>
        <img class="img-fluid shadow rounded-3" src="@Model?.ImageUrl" alt="@Model?.ImageUrl"/>
      <p class="lead text-danger">@Model.Price.ToString("c")</p>
      </div>
  </div>
</div>

<div class="text-center">

<div class="btn-group">
  <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Home</a>
  <form id="@Model.ProductId" asp-page="Cart" method="post">
    <input type="hidden" asp-for="ProductId"/>
    <input type="hidden" name="ReturnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
    <button type="submit" class="btn btn-outline-primary">
      <i class="fa fa-cart-plus"></i>
    </button>
  </form>
  <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">Products</a>
</div>

</div>

@section Top{
  <div>Header for only get</div>
}
